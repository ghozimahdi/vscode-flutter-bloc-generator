{
  "name": "gm-bloc-generator",
  "displayName": "GM BLoC Generator",
  "description": "Generate BLoC files (bloc.dart, event.dart, state.dart) with templates",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/ghozimahdi/vscode-flutter-bloc-generator"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:pubspec.yaml",
    "onLanguage:dart"
  ],
  "extensionKind": [
    "workspace"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "gm-bloc-generator.createBloc",
        "title": "Create BLoC Files",
        "category": "GM BLoC"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "gm-bloc-generator.createBloc",
          "group": "navigation@100"
        }
      ],
      "commandPalette": [
        {
          "command": "gm-bloc-generator.createBloc"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  }
}
